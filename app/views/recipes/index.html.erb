<main class="main-area">
  <div class="centered">
    <section class="cards">
    <% @recipes.each do |recipe| %>
      <article class="card">
        <picture class="thumbnail">
          <%= image_tag recipe.thumbnail, class: "image" %>
        </picture>
        <div class="card-content">
          <h2><%= recipe.name %></h2>
          <p><%= recipe.level %> | <%= recipe.serve %></p>
        </div><!-- card-content -->
      </article><!-- card -->
      <% end %>
    </section><!-- cards -->
  </div><!-- centered -->
</main>

