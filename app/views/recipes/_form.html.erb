
<%= form_for(@recipe) do |f| %>
  
    <%= chapter_id_field(@recipe) %>
  <br>
  <%= f.hidden_field :chapter_id %>
  
  <%= f.label :name, class: "label" %>
  <%= f.text_field :name, class: "input" %>

  <%= f.label :image, class: 'label' %>
  <%= f.file_field :image %>

  <%= f.label :level, class: "label" %>
  <%= f.text_field :level, class: "input" %>

  <%= f.label :serve, class: "label" %>
  <%= f.text_field :serve, class: "input" %><br/>
        
      <br>
  <%= f.submit %>
<% end %>