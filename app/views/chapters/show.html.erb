<section class="section">
  <div class="container">
      <h2 class="title dinner-title"><%= @chapter.title %></h2><br/>
        
  </div>
  <div class="container">
  <% @chapter.recipes.each do |recipe| %>
    <h3 class="title recipe-title"><%= recipe.name %></h3>
      <p class="subtitle recipe-subtitle">Level: <%= recipe.level %> | Serves: <%= recipe.serve %></p>
  </div>
  <div class="hero flex-center">  
    <div class="hero-message">
      <%= image_tag recipe.image, class: "show-image" %>
    </div>
  </div>
  <div class="not-hero flex-center bg-info">
    <div class="not-hero-message">
      
    </div>
      <div class="container">
        <p class="subtitle ingredients-subtitle"><strong>Ingredients:</strong></p>
        
        <ul>
          <li class="ingredient-list">Ingredient Name </li>
        </ul>
        <% end %>
      </div>
    </div>
</section>
